<?xml version="1.0" encoding="UTF-8"?>
<!--  FIXME: Generate New Log file instead of overwriting  -->

<Configuration status="INFO">
    <Properties>
        <!-- Base directory dynamically set to Windows user's home + subpath -->
        <Property name="baseDir">${sys:user.home}/AppData/Local/alphagnfss/PianoController/2.1.0.1.0/log</Property>
        <!-- Log file name starts with pianoController and has timestamp -->
        <Property name="logFileName">pianoController-%d{yyyy-MM-dd-HH-mm-ss}.log</Property>
        <!-- Full log file path -->
        <Property name="logFilePath">${baseDir}/${logFileName}</Property>
    </Properties>

    <Appenders>
        <RollingFile name="RollingFileAppender"
                     fileName="${logFilePath}"
                     filePattern="${baseDir}/pianoController-%d{yyyy-MM-dd-HH}.log.gz"
                     append="false">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <OnStartupTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="RollingFileAppender"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
